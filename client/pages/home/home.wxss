/* pages/home/home.wxss */

.title{
  margin:15rpx;
  padding:20rpx;
  font-size: 1.2em;
  color: #7a1705;
  font-weight: bold;
}
swiper{
  width:100%;
  height:320rpx;
}

swiper-item image{
  margin-top:-50rpx;
  width:100%;
}
.grid{
  width:90%;
  margin: 0 auto;
  margin-top: 50rpx;
  text-align: center;
  display: grid;
  height:590rpx;
  grid-template-columns: 1fr 1fr 1fr;
  grid-template-rows: 1fr 1fr 1fr;
  grid-gap: 10rpx;
}

.grid view{
  text-align: center;
}
.grid image{
  width:100rpx;
  height:100rpx;
  display: block;
  margin: 0 auto;
  
}
.grid text{
  font-size: 25rpx;
}